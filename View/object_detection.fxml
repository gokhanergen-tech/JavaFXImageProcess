           </HBox>
           <Label text="Hue Start" />
           <Slider fx:id="hueStart" min="0" max="180" value="20" blockIncrement="1" />
           <Label text="Hue Stop" />
           <Slider fx:id="hueStop" min="0" max="180" value="50" blockIncrement="1" />
           <Label text="Saturation Start" />
